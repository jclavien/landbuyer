    <.live_title>{assigns[:page_title] || "Landbuyer"}</.live_title>
    
<!-- CSS généré par Tailwind/PostCSS -->
    <link phx-track-static rel="stylesheet" href={Routes.static_path(@conn, "/assets/app.css")} />
